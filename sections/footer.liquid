<footer class="footer container">
  <div class="footer-divider"></div>
  <div class="footer-grid">
    <div class="footer-newsletter">
      <h2 class="footer-newsletter-title">Sign up to our newsletter</h2>
      {% render 'klaviyo-form' %}
    </div>

    <nav class="footer-nav">
      <ul class="footer-links-grid">
        {% for link in linklists['footer'].links %}
          <li><a href="{{ link.url }}">{{ link.title }}</a></li>
        {% endfor %}
      </ul>
    </nav>

    <div class="footer-contact">
      <ul class="footer-contact-links">
        <li><a href="mailto:{{ shop.email }}">{{ shop.email }}</a></li>
        {% if settings.instagram_url %}
          <li><a href="{{ settings.instagram_url }}" target="_blank" rel="noopener">Instagram</a></li>
        {% endif %}
      </ul>
    </div>
  </div>
  <div class="footer-bottom">
    <span class="footer-copyright">Â© OTSAMO 2025</span>
    <span class="footer-credits"><span class="footer-credits-label">Photos by </span><span class="footer-credits-name">Kanerva Mantila</span></span>
  </div>
</footer>
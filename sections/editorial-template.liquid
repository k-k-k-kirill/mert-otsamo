{{ 'editorial.css' | asset_url | stylesheet_tag }}

<div class="editorial-page container">
  {% if section.settings.title != blank %}
    <h1 class="editorial-title">{{ section.settings.title }}</h1>
  {% endif %}

  <div class="editorial-grid">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'image' %}
          <div class="editorial-item editorial-item--{{ block.settings.size }}" {{ block.shopify_attributes }}>
            {% if block.settings.image %}
              <div class="editorial-image">
                <img 
                  src="{{ block.settings.image | img_url: '800x' }}" 
                  alt="{{ block.settings.caption | escape }}"
                  loading="lazy">
              </div>
            {% else %}
              <div class="editorial-image editorial-image--placeholder"></div>
            {% endif %}
            {% if block.settings.caption != blank %}
              <p class="editorial-caption">{{ block.settings.caption }}</p>
            {% endif %}
          </div>
        {% when 'text' %}
          <div class="editorial-item editorial-item--text editorial-item--{{ block.settings.size }}" {{ block.shopify_attributes }}>
            <div class="editorial-text">
              {{ block.settings.content }}
            </div>
          </div>
      {% endcase %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Editorial Template",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "NEW COLLECTION"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "caption",
          "label": "Caption"
        },
        {
          "type": "select",
          "id": "size",
          "label": "Size",
          "options": [
            { "value": "small", "label": "Small" },
            { "value": "medium", "label": "Medium" },
            { "value": "large", "label": "Large" },
            { "value": "tall", "label": "Tall" }
          ],
          "default": "medium"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text Block",
      "settings": [
        {
          "type": "richtext",
          "id": "content",
          "label": "Content"
        },
        {
          "type": "select",
          "id": "size",
          "label": "Size",
          "options": [
            { "value": "small", "label": "Small" },
            { "value": "medium", "label": "Medium" },
            { "value": "large", "label": "Large" }
          ],
          "default": "medium"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Editorial Template"
    }
  ]
}
{% endschema %}


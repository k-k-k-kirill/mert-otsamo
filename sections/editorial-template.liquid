{{ 'editorial.css' | asset_url | stylesheet_tag }}

<div class="editorial-page container">
  {% if section.settings.title != blank %}
    <h1 class="editorial-title">{{ section.settings.title }}</h1>
  {% endif %}

  {% if section.settings.text_content != blank %}
    <div class="editorial-intro">
      <div class="editorial-text">{{ section.settings.text_content }}</div>
    </div>
  {% endif %}

  <div class="editorial-grid">
    {% comment %} 
      Grid pattern repeats every 11 images (4 rows per cycle):
      Row 1: Position 1, text, Position 2, Position 3
      Row 2: Position 4 (big square), Position 5 (vertical)
      Row 3: Position 6, 7, 8, 9
      Row 4: Position 10 (vertical), Position 11 (big square)
    {% endcomment %}

    {% assign image_index = 0 %}
    
    {% for block in section.blocks %}
      {% if block.type == 'image' %}
        {% assign image_index = image_index | plus: 1 %}
        {% assign position_in_cycle = image_index | modulo: 11 %}
        {% if position_in_cycle == 0 %}
          {% assign position_in_cycle = 11 %}
        {% endif %}
        
        {% assign cycle_number = image_index | minus: 1 | divided_by: 11 %}
        {% assign row_offset = cycle_number | times: 4 %}
        
        {% comment %} Calculate actual row based on position {% endcomment %}
        {% case position_in_cycle %}
          {% when 1 or 2 or 3 %}
            {% assign base_row = 1 %}
          {% when 4 or 5 %}
            {% assign base_row = 2 %}
          {% when 6 or 7 or 8 or 9 %}
            {% assign base_row = 3 %}
          {% when 10 or 11 %}
            {% assign base_row = 4 %}
        {% endcase %}
        {% assign actual_row = base_row | plus: row_offset %}
        
        {% comment %} Insert text block after first image of first cycle {% endcomment %}
        {% if image_index == 1 and section.settings.text_content != blank %}
          <div class="editorial-item editorial-item--1" style="--row: {{ actual_row }}">
            {% if block.settings.image %}
              <div class="editorial-image">
                <img src="{{ block.settings.image | img_url: '800x' }}" alt="{{ block.settings.caption | escape }}" loading="lazy">
              </div>
            {% else %}
              <div class="editorial-image editorial-image--placeholder"></div>
            {% endif %}
            {% if block.settings.caption != blank %}
              <p class="editorial-caption">{{ block.settings.caption }}</p>
            {% endif %}
          </div>
          
          <div class="editorial-item editorial-item--text" style="--row: {{ actual_row }}">
            <div class="editorial-text">{{ section.settings.text_content }}</div>
          </div>
        {% else %}
          {% comment %} Determine the item class based on position {% endcomment %}
          {% case position_in_cycle %}
            {% when 1 %}
              {% assign item_class = 'editorial-item--1' %}
            {% when 2 %}
              {% assign item_class = 'editorial-item--2' %}
            {% when 3 %}
              {% assign item_class = 'editorial-item--3' %}
            {% when 4 %}
              {% assign item_class = 'editorial-item--4' %}
            {% when 5 %}
              {% assign item_class = 'editorial-item--5' %}
            {% when 6 %}
              {% assign item_class = 'editorial-item--6' %}
            {% when 7 %}
              {% assign item_class = 'editorial-item--7' %}
            {% when 8 %}
              {% assign item_class = 'editorial-item--8' %}
            {% when 9 %}
              {% assign item_class = 'editorial-item--9' %}
            {% when 10 %}
              {% assign item_class = 'editorial-item--10' %}
            {% when 11 %}
              {% assign item_class = 'editorial-item--11' %}
          {% endcase %}
          
          <div class="editorial-item {{ item_class }}" style="--row: {{ actual_row }}">
            {% if block.settings.image %}
              <div class="editorial-image">
                <img src="{{ block.settings.image | img_url: '800x' }}" alt="{{ block.settings.caption | escape }}" loading="lazy">
              </div>
            {% else %}
              <div class="editorial-image editorial-image--placeholder"></div>
            {% endif %}
            {% if block.settings.caption != blank %}
              <p class="editorial-caption">{{ block.settings.caption }}</p>
            {% endif %}
          </div>
        {% endif %}
      {% endif %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Editorial Template",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "READ BETWEEN THE LINES"
    },
    {
      "type": "richtext",
      "id": "text_content",
      "label": "Text Content (appears in first row)"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "caption",
          "label": "Caption"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Editorial Template",
      "blocks": [
        { "type": "image" },
        { "type": "image" },
        { "type": "image" },
        { "type": "image" },
        { "type": "image" },
        { "type": "image" },
        { "type": "image" },
        { "type": "image" },
        { "type": "image" },
        { "type": "image" },
        { "type": "image" }
      ]
    }
  ]
}
{% endschema %}

{{ 'editorial.css' | asset_url | stylesheet_tag }}

<div class="editorial-page container">
  {% if section.settings.title != blank %}
    <h1 class="editorial-title">{{ section.settings.title }}</h1>
  {% endif %}

  <div class="editorial-grid">
    <!-- Row 1: Image 1, Text, Image 2, Image 3 -->
    <div class="editorial-item editorial-item--1">
      {% if section.settings.image_1 %}
        <div class="editorial-image">
          <img src="{{ section.settings.image_1 | img_url: '800x' }}" alt="{{ section.settings.caption_1 | escape }}" loading="lazy">
        </div>
      {% else %}
        <div class="editorial-image editorial-image--placeholder"></div>
      {% endif %}
      {% if section.settings.caption_1 != blank %}
        <p class="editorial-caption">{{ section.settings.caption_1 }}</p>
      {% endif %}
    </div>

    <div class="editorial-item editorial-item--text">
      {% if section.settings.text_content != blank %}
        <div class="editorial-text">{{ section.settings.text_content }}</div>

{{ 'about.css' | asset_url | stylesheet_tag }}

<div class="about-page container">
  {% if section.settings.image %}
    <div class="about-image">
      <img 
        src="{{ section.settings.image | img_url: '1600x' }}" 
        alt="{{ section.settings.image.alt | escape }}"
        loading="lazy">
    </div>
  {% endif %}

  {% if section.settings.heading != blank %}
    <h1 class="about-heading">{{ section.settings.heading }}</h1>
  {% endif %}

  {% if section.settings.content != blank %}
    <div class="about-content">
      {{ section.settings.content }}
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "About Template",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "OTSAMO"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content"
    }
  ]
}
{% endschema %}


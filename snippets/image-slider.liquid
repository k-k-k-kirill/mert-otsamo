{% if section.blocks.size > 0 %}
  <div class="image-slider-wrapper">
    <div class="swiper landing-page-slider">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          {% if block.type == 'slider_image' and block.settings.image != blank %}
            <div class="swiper-slide">
              <img
                src="{{ block.settings.image | img_url: '1200x1200' }}"
                alt="{{ block.settings.image.alt | escape }}"
                loading="lazy"
                class="slider-image">
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>

  <script>
    function initLandingPageSlider() {
      if (typeof Swiper === 'undefined') {
        setTimeout(initLandingPageSlider, 100);
        return;
      }

      const sliderElement = document.querySelector('.landing-page-slider');
      if (!sliderElement) return;

      new Swiper('.landing-page-slider', {
        loop: true,
        autoplay: {
          delay: 5000,
          disableOnInteraction: false,
        },
        effect: 'fade',
        fadeEffect: {
          crossFade: true
        },
        speed: 1000,
      });
    }

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initLandingPageSlider);
    } else {
      initLandingPageSlider();
    }
  </script>
{% endif %}

